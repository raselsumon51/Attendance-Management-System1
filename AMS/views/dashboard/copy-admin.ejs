 <!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    a {
      color: rgb(0, 0, 0);
      text-decoration: none;
    }

    a:hover {
      color: rgb(0, 0, 0);
    }

    body {
      color: white;
    }
  </style>
</head>

<body>

  <div class="container">
    <h3 class="text-center pt-5">Admin Dashboard</h3>
    <h6 class="text-end">

    </h6>
    <h6 class="text-end text-black"><a href="/admin/logout"><button class="btn bg-info text-white pb-2">Logout</button></a></h6>
    <div class="row">
      <div class="col-4 ">
        <ul class="list-unstyled">
          <li class="mb-2 py-2 bg-info text-center fs-4"><a href="/teacher/create">Create Teacher</a></li>
          <li class="my-2 py-2 bg-info text-center fs-4"><a href="/course/create">Create Course</a></li>
          <li class="my-2 py-2 bg-info text-center fs-4"><a href="/course/all/show">Courses</a></li>
          <li class="my-2 py-2 bg-info text-center fs-4"><a href="/teacher/all">Teachers</a></li>
          <li class="my-2 py-2 bg-info text-center fs-4"><a href="/course/add/teacher">Add Course Teacher</a></li>
          <!-- <li class="my-2 py-2 bg-info text-center fs-3"><a href="/">Add Marks</a></li> -->
        </ul>
      </div>
      <div class="col-8 bg-secondary">


 <% if (page=='createCourse') { %>
                <%- include('../course/createCourse') %>

            <% } else if(page==='createTeacher') { %>
                <%- include('../teacher/createTeacher') %>
                
            <% } else if(page==='allCourses') { %>
                <%- include('../course/allCourses') %>

                <% } else if(page==='allTeachers') { %>
                <%- include('../teacher/allTeachers') %>
                
             <% } else if(page==='addCourseTeacher' ) { %>
                <%- include('../course/addCourseTeacher') %>
            
            <% } else if(page==='teachersCourses' ) { %>
                <%- include('../teachersCourses/teachersCourses') %>

            <% } else if(page==='/attendance/take' ) { %>
                <%- include('../attendance/take_attendance') %>

            <% } else { %>
                <h5>Hi!</h5>
            <% } %> 
      </div>
    </div>
  </div>

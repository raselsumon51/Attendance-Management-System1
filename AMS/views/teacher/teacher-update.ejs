<div class="container my-4 py-3">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Update Teacher Info</h3>
        </div>
        <div class="card-body">
          <form action="/teacher/<%= teacher._id %>/update" method="POST">
            <div class="form-group">
              <label for="name">Email:</label>
              <input type="text" class="form-control" name="name" value="<%= teacher.email %>">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

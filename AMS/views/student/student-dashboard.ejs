<h1>student Dashboard</h1>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    a {
      color: rgb(0, 0, 0);
      text-decoration: none;
    }

    a:hover {
      color: rgb(0, 0, 0);
    }
  </style>
</head>

<body>

  <div class="container">
    <h3 class="text-center pt-5">Student Dashboard</h3>
     <%= student_email %>
    <h6 class="text-end text-black"><a href="/student/logout">Logout</a></h6>
    <div class="row">
      <div class="col-4 ">
        <ul class="list-unstyled">
          <li class="my-2 py-2 bg-info text-center fs-4"><a href="/course/all">All Courses</a></li>
          <li class="my-2 py-2 bg-info text-center fs-3"><a href="/teacher/profile">Profile </a></li>
          <li class="my-2 py-2 bg-info text-center fs-4"><a href="/attendance/all-courses">Attendance</a></li>
          <li class="my-2 py-2 bg-info text-center fs-3"><a href="/course/setmarks">Enrolled Courses</a></li>
        </ul>
      </div>
      <div class="col-8 bg-warning">
        <% if (page=='course-all') { %>
        <%- include('../student/all-courses') %>

        <% } else if(page==='attendance_take' ) { %>
        <%- include('../attendance/take_attendance') %>

        <% } else if(page==='showCourses' ) { %>
        <%- include('../course/showCourses') %>

        <% } else { %>
        <h5>Hii!</h5>
        <% } %>
      </div>
    </div>
  </div>
</body>

</html>